  "scripts": {
    "docs:analyze": "node scripts/docs/analyze-interactions.js",
    "docs:validate": "node scripts/docs/validate-documentation.js",
    "docs:test": "jest scripts/__tests__/update-ux-documentation.test.js",
    "dev": "npx next dev",
    "dev:fast": "next dev --turbo",
    "dev:4200": "next dev -p 4200",
    "dev:3873": "next dev -p 3873",
    "dev:4242": "next dev -p 4242",
    "build": "npx next build",
    "start": "npx next start",
    "start:3873": "next start -p 3873",
    "start:https": "node scripts/start-https.js",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:spacing": "jest --testPathPattern=spacing",
    "test:resilience": "jest --testPathPattern='resilience|error|retry' --coverage",
    "test:chaos": "jest --testPathPattern=chaos",
    "test:smoke": "jest --testPathPattern=smoke",
    "validate:components": "npm run type-check && npm run lint",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "e2e": "start-server-and-test dev http://localhost:3000 cypress",
    "e2e:headless": "start-server-and-test dev http://localhost:3000 cypress:headless",
    "prepare": "husky install",
    "generate-blur": "node scripts/generate-blur-placeholders.js",
    "clean": "node scripts/clean-build-cache.js",
    "clean:all": "rm -rf .next node_modules/.cache package-lock.json && npm install",
    "fresh-start": "npm run clean && npm run dev",
    "fresh-start:4242": "npm run clean && npm run dev:4242",
    "clickup:fetch-fields": "node scripts/fetch-clickup-field-ids.js",
    "clickup:init": "node scripts/fetch-clickup-field-ids.js && echo 'Update src/lib/crm/clickup-field-mapping.ts with the output above'",
    "clickup:verify": "node scripts/verify-clickup-connection.js",
    "clickup:test": "node scripts/verify-clickup-connection.js",
    "clickup:fields": "node scripts/fetch-clickup-field-ids.js",
    "clickup:lists": "node scripts/find-clickup-lists.js",
    "clickup:find-crm": "node scripts/find-crm-list.js",
    "clickup:add-fields": "node scripts/add-missing-clickup-fields.js",
    "clickup:add-fields:dry": "node scripts/add-missing-clickup-fields.js --dry-run",
    "crm:sync": "curl -X GET http://localhost:3000/api/crm/sync",
    "crm:test-create": "curl -X POST http://localhost:3000/api/crm/contacts -H 'Content-Type: application/json' -d '{\"firstName\":\"Test\",\"lastName\":\"User\",\"email\":\"test@example.com\",\"relationship\":\"Test\",\"connectionStrength\":\"Test\",\"engagementLevel\":\"low\"}'",
    "prepare-deployment": "chmod +x ./prepare-deployment.sh && ./prepare-deployment.sh",
    "prepare-vercel": "chmod +x ./prepare-vercel-deployment.sh && ./prepare-vercel-deployment.sh",
    "postinstall": "node scripts/clean-build-cache.js",
    "docs:watch": "node scripts/watch-ux-docs.js",
    "docs:update": "node scripts/update-ux-documentation.js",
    "backlog:watch": "ts-node scripts/backlog/init.ts",
    "backlog:init": "ts-node scripts/backlog/init.ts",
    "cascade:check": "node scripts/detect-cascade-risk.js",
    "safe:build": "npm run cascade:check && npm run build",
    "safe:dev": "npm run cascade:check && npm run dev"
  },
