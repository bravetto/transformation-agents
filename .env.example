# The Bridge Project - Environment Variables Template
# Copy this file to .env.local and replace with your actual values

# === Required for Core Functionality ===

# ClickUp CRM Integration
CLICKUP_API_KEY=your_clickup_api_key_here
CLICKUP_LIST_ID=your_clickup_list_id_here
CLICKUP_SPACE_ID=your_clickup_space_id_here
CLICKUP_TEAM_ID=your_clickup_team_id_here

# AI Integration (optional but recommended)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Base URL (set to your domain in production)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# === Optional Integrations ===

# Clerk Authentication (if using auth)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Analytics
ANALYTICS_API_KEY=your_analytics_api_key_here

# Database (if using database features)
DATABASE_URL=your_database_url_here

# Debug mode
CLICKUP_DEBUG=false
NODE_ENV=development
